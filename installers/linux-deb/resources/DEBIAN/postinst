ln -s /opt/ballerina/ballerina-__BALLERINA_VERSION__/bin/ballerina /usr/bin/ballerina
if [ -f /opt/ballerina/ballerina-__BALLERINA_VERSION__/bin/composer ]; then
    ln -s /opt/ballerina/ballerina-__BALLERINA_VERSION__/bin/composer /usr/bin/composer
fi
echo "export BALLERINA_HOME=/opt/ballerina/ballerina-__BALLERINA_VERSION__" >> /etc/profile.d/wso2.sh

